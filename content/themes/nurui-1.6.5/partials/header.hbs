<div class="section-header wrap">
	<header class="header-wrap flex">
		<div class="header-logo">
			{{#if @site.logo}}
			{{#is "post, page"}}<div{{else}}<h1{{/is}} class="is-logo"><a href="{{@site.url}}"><img src="{{@site.logo}}" alt="{{@site.title}}"></a>{{#is "post, page"}}</div>{{else}}</h1>{{/is}}
			{{else}}
			{{^is "post, page"}}<h1>{{/is}}<a class="no-logo" href="{{@site.url}}">{{@site.title}}</a>{{^is "post, page"}}</h1>{{/is}}{{/if}}
		</div>
		<div class="header-nav">
			<nav class="nav-wrap">
				<label for="toggle" class="nav-label hamburger hamburger-minus">
					<span class="hamburger-box">
						<span class="hamburger-inner"></span>
					</span>
				</label>
				<input type="checkbox" id="toggle" class="nav-toggle">
				{{navigation}}
			</nav>
		</div>
		{{#if @site.description}}
		<div class="blog-description flex">{{@site.description}}</div>
		{{/if}}
	</header>
</div>